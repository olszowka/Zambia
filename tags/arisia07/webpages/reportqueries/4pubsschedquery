TITLE='Schedule report for Pubs'
DESCRIPTION='Lists all Sessions Scheduled in all Rooms.'
QUERY="select roomname, function, DATE_FORMAT(ADDTIME('2006-01-13 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', concat('(',left(duration,5),')') Duration, trackname,pubsno, S.sessionid, title, if(group_concat(' ',firstname,' ',lastname) is NULL,'', group_concat(' ',firstname,' ',lastname)) as 'Participants' from Rooms R, Sessions S, Schedule SCH LEFT JOIN ParticipantOnSession POS ON SCH.sessionid=POS.sessionid LEFT JOIN CongoDump C ON POS.badgeid=C.badgeid LEFT JOIN Tracks T ON T.trackid=S.trackid where SCH.roomid = R.roomid and SCH.sessionid = S.sessionid and trackname not in ('Do Not Print') group by SCH.sessionid order by SCH.starttime, R.roomname"
