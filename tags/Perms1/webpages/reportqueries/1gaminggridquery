TITLE='Gaming Grid'
DESCRIPTION='Display Gaming schedule with rooms on horizontal axis and time on vertical.'
QUERY="select DATE_FORMAT(ADDTIME('2006-01-13 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', group_concat(if(roomid='2',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Alcott',group_concat(if(roomid='3',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Back Bay',group_concat(if(roomid='4',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Beacon Hill',group_concat(if(roomid='5',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Board Room',group_concat(if(roomid='6',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Brandeis',group_concat(if(roomid='7',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Cabot',group_concat(if(roomid='9',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Charles River' from (SELECT trackname,' ',S.sessionid, SCH.roomid, starttime, duration, title from Schedule SCH, Sessions S, Rooms R, Tracks T where T.trackname != 'Do Not Print' and T.trackid=S.trackid and S.sessionid = SCH.sessionid and SCH.roomid=R.roomid and R.function like '%Gam%')as Z group by starttime;"
