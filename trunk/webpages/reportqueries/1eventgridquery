TITLE='Event Grid'
DESCRIPTION='Display event schedule with rooms on horizontal axis and time on vertical.'
QUERY="select DATE_FORMAT(ADDTIME('2008-01-18 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', group_concat(if(roomid='2',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Presidents ABCD',group_concat(if(roomid='45',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Presidents AB',group_concat(if(roomid='3',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Presidents A',group_concat(if(roomid='4',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Presidents B',group_concat(if(roomid='6',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Presidents D' from (SELECT trackname,' ',S.sessionid, SCH.roomid, starttime, duration, title from Schedule SCH, Sessions S, Rooms R, Tracks T where T.trackid=S.trackid and T.trackname != 'Do Not Print' and S.sessionid = SCH.sessionid and SCH.roomid=R.roomid and R.function like '%ent%')as Z group by starttime;"
