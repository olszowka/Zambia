TITLE='Full Participant Schedule by time '
DESCRIPTION='The schedule sorted by participant'
QUERY="select roomname, function, DATE_FORMAT(ADDTIME('2006-01-13 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', duration, trackname,S.sessionid, title, concat(' ',firstname,' ',lastname,' (',C.badgeid,')') as 'Participants' from Rooms R, Sessions S, Schedule SCH LEFT JOIN ParticipantOnSession POS ON SCH.sessionid=POS.sessionid LEFT JOIN CongoDump C ON POS.badgeid=C.badgeid LEFT JOIN Tracks T ON T.trackid=S.trackid where SCH.roomid = R.roomid and SCH.sessionid = S.sessionid order by C.badgeid, SCH.starttime;"
