TITLE='Interest v Schedule - sorted by panel'
DESCRIPTION='Show who is interested in each panel and if they are assigned to it.  Also show the scheduling information'
PROGWANTS=1
QUERY="select trackname, X.sessionid, title, badgeid, badgename,  (if (assigned is NULL,'no','yes')) as 'Assigned?', roomname, DATE_FORMAT(ADDTIME('2008-01-18 00:00:00',starttime),'%a %l:%i %p') as 'Start Time' from (select PI.badgeid, badgename, PI.sessionid, POS.sessionid as assigned, title, trackname from (select trackname, title,S.sessionid, P.badgeid, badgename from Tracks T, ParticipantSessionInterest PSI, Participants P, Sessions S, CongoDump C where S.trackid=T.trackid and interested=1 and P.badgeid=PSI.badgeid and S.sessionid=PSI.sessionid and C.badgeid=P.badgeid) PI left join ParticipantOnSession POS on POS.badgeid=PI.badgeid and POS.sessionid=PI.sessionid) X left join (select starttime, roomname, sessionid from Schedule SCH, Rooms R where R.roomid=SCH.roomid) as Y on X.sessionid=Y.sessionid order by X.sessionid;"
