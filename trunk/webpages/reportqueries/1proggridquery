TITLE='Programming Grid'
DESCRIPTION='Display Programming schedule with rooms on horizontal axis and time on vertical.'
QUERY="select DATE_FORMAT(ADDTIME('2006-01-13 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', group_concat(if(roomid='9',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Charles River',group_concat(if(roomid='10',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Constitution',group_concat(if(roomid='13',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Franklin',group_concat(if(roomid='16',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Lexington',group_concat(if(roomid='17',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Longfellow',group_concat(if(roomid='18',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'St. James',group_concat(if(roomid='21',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Stuart',group_concat(if(roomid='22',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Thoreau',group_concat(if(roomid='23',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Tremont',group_concat(if(roomid='24',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'White Hill',group_concat(if(roomid='25',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Whittier',group_concat(if(roomid='26',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Winthrop',group_concat(if(roomid='35',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Hancock' from (SELECT trackname, S.sessionid, SCH.roomid, starttime, duration, title from Tracks T, Schedule SCH, Sessions S, Rooms R where S.trackid=T.trackid and S.sessionid = SCH.sessionid and SCH.roomid=R.roomid and R.function like '%rogram%')as Z group by starttime;"
