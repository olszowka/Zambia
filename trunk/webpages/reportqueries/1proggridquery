TITLE='Programming Grid'
DESCRIPTION='Display Programming schedule with rooms on horizontal axis and time on vertical.'
QUERY="select DATE_FORMAT(ADDTIME('2008-01-18 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', group_concat(if(roomid='7',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Prefunction A',group_concat(if(roomid='11',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Paul Revere AB',group_concat(if(roomid='12',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Paul Revere A',group_concat(if(roomid='13',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Paul Revere B',group_concat(if(roomid='16',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'William Dawes AB',group_concat(if(roomid='17',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'William Dawes A',group_concat(if(roomid='18',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'William Dawes B',group_concat(if(roomid='19',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Crispus Attucks',group_concat(if(roomid='21',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Molly Pitcher',group_concat(if(roomid='23',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Guest Room 201',group_concat(if(roomid='25',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Guest Room 203',group_concat(if(roomid='26',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Guest Room 204' from (SELECT trackname, S.sessionid, SCH.roomid, starttime, duration, title from Tracks T, Schedule SCH, Sessions S, Rooms R where T.trackname != 'Do Not Print' and S.trackid=T.trackid and S.sessionid = SCH.sessionid and SCH.roomid=R.roomid and R.function like '%rogram%')as Z group by starttime;"
