TITLE='Whole Grid - for con'
DESCRIPTION='Display entire schedule with rooms on horizontal axis and time on vertical.  This excludes any item marked "Do Not Print"'
QUERY="select DATE_FORMAT(ADDTIME('2006-01-13 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', group_concat(if(roomid='2',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'President\'s ABCD',group_concat(if(roomid='3',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'President\'s A',group_concat(if(roomid='6',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'President\'s D',group_concat(if(roomid='7',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Prefunction A',group_concat(if(roomid='9',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Prefunction D',group_concat(if(roomid='11',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Paul Revere AB',group_concat(if(roomid='12',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Paul Revere A',group_concat(if(roomid='13',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Paul Revere B',group_concat(if(roomid='15',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Thomas Paine AB',group_concat(if(roomid='17',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'William Dawes A',group_concat(if(roomid='18',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'William Dawes B',group_concat(if(roomid='19',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Crispus Attucks',group_concat(if(roomid='20',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Haym Solomon',group_concat(if(roomid='21',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Molly Pitcher',group_concat(if(roomid='23',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Guest Room 201',group_concat(if(roomid='26',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Guest Room 204',group_concat(if(roomid='29',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Cambridge A',group_concat(if(roomid='30',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Cambridge B',group_concat(if(roomid='31',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Aquarium',group_concat(if(roomid='36',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Prefunction',group_concat(if(roomid='40',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Fast Track 1',group_concat(if(roomid='41',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Fast Track 2',group_concat(if(roomid='42',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Fast Track 3' from (SELECT trackname,S.sessionid, roomid, starttime, duration, title from Tracks T, Schedule SCH, Sessions S where T.trackname != 'Do Not Print' and T.trackid=S.trackid and S.sessionid = SCH.sessionid) as Z group by starttime;"
