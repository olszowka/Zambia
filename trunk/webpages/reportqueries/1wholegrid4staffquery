TITLE='Whole Grid - Staff view'
DESCRIPTION='Display entire schedule with rooms on horizontal axis and time on vertical. (this includes items marked "Do Not Print"'
QUERY="select DATE_FORMAT(ADDTIME('2006-01-13 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', group_concat(if(roomid='2',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Alcott',group_concat(if(roomid='3',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Back Bay',group_concat(if(roomid='4',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Beacon Hill',group_concat(if(roomid='5',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Board Room',group_concat(if(roomid='6',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Brandeis',group_concat(if(roomid='7',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Cabot',group_concat(if(roomid='9',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Charles River',group_concat(if(roomid='10',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Constitution',group_concat(if(roomid='11',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Copley',group_concat(if(roomid='12',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Emerson',group_concat(if(roomid='13',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Franklin',group_concat(if(roomid='14',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Gloucester',group_concat(if(roomid='15',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Holmes',group_concat(if(roomid='16',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Lexington',group_concat(if(roomid='17',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Longfellow',group_concat(if(roomid='18',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'St. James',group_concat(if(roomid='19',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Garden Suite',group_concat(if(roomid='21',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Stuart',group_concat(if(roomid='22',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Thoreau',group_concat(if(roomid='23',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Tremont',group_concat(if(roomid='24',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'White Hill',group_concat(if(roomid='25',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Whittier',group_concat(if(roomid='26',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Winthrop',group_concat(if(roomid='27',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Imperial Ballroom',group_concat(if(roomid='28',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Plaza Ballroom',group_concat(if(roomid='30',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Arlington',group_concat(if(roomid='31',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Berkeley',group_concat(if(roomid='32',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Clarendon',group_concat(if(roomid='35',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Hancock',group_concat(if(roomid='36',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Stanbro',group_concat(if(roomid='37',Concat(trackname,' ',sessionid,' ',title,' (',left(duration,5),')'),'') separator '') as 'Terrace' from (SELECT trackname,S.sessionid, roomid, starttime, duration, title from Tracks T, Schedule SCH, Sessions S where T.trackname != 'Do Not Print' and T.trackid=S.trackid and S.sessionid = SCH.sessionid) as Z group by starttime;"
