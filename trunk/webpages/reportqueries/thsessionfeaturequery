TITLE='Session Features'
DESCRIPTION='Which Session needs which Features?'
PROGWANTS=1
EVENTSWANTS=1
TECHWANTS=1
HOTELWANTS=1
QUERY="
   select roomname,
          DATE_FORMAT(ADDTIME('2008-01-18 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', 
          duration,
          trackname, 
          concat('<a href=StaffAssignParticipants.php?selsess=',X.sessionid,'>', X.sessionid,'</a>') as sessionid,
          title, 
          X.featurename 
          from (select duration,
                       trackname,
                       S.sessionid,
                       title,
                       featurename 
                  from Sessions S, 
                       SessionHasFeature SF, 
                       Features F, 
                       Tracks T 
                 where T.trackid=S.trackid 
                   and S.sessionid=SF.sessionid 
                   and F.featureid=SF.featureid) X, 
         Rooms R, 
         Schedule SCH 
   where X.sessionid=SCH.sessionid 
     and SCH.roomid=R.roomid 
order by roomname, 
         starttime;"
   