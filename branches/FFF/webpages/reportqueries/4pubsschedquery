TITLE='Schedule report for Pubs'
DESCRIPTION='Lists all Sessions Scheduled in all Rooms.'
GENCSV=1
PUBSWANTS=1
QUERY="
   select S.sessionid,
          R.roomname, 
          DATE_FORMAT(ADDTIME('2009-01-16 00:00:00',SCH.starttime),
                      '%a %l:%i %p') as 'Start Time', 
          concat('(',left(S.duration,5),')') Duration,
          T.trackname,
          S.title, 
          PS.pubstatusname
     from 
          Sessions S
     join Schedule SCH
               using (sessionid)
     join Rooms R 
               using (roomid)
     join Tracks T
               using (trackid)
     join PubStatuses PS
               using (pubstatusid) 
 order by SCH.starttime, 
          R.roomname;"
