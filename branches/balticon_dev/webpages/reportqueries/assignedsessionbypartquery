TITLE='Assigned Session by Participant'
DESCRIPTION='Shows who has been assigned to each session ordered by badgeid.'
PROGWANTS=1
EVENTSWANTS=1
QUERY="
select P.Badgeid, 
       P.Pubsname, 
       if ((moderator=1), 'Yes', ' ') as 'Moderator',
       concat('<a href=StaffAssignParticipants.php?selsess=',Sessions.sessionid,'>',
                 Sessions.sessionid,'</a>') as Sessionid,
       concat('<a href=EditSession.php?id=',Sessions.sessionid,'>',Sessions.title,'</a>') Title
  from ParticipantOnSession, 
       Sessions, 
       Participants P
 where ParticipantOnSession.badgeid=P.badgeid 
   and ParticipantOnSession.sessionid=Sessions.sessionid 
order by cast(P.badgeid as unsigned);"
