TITLE='All Sessions that are assigned'
DESCRIPTION='Who is assigned to what'
PROGWANTS=1
QUERY="
   select trackname as Trackname, 
          concat('<a href=StaffAssignParticipants.php?selsess=',S.sessionid,'>',
                S.sessionid,'</a>') as Sessionid,
          concat('<a href=EditSession.php?id=',S.sessionid,'>',S.title,'</a>') Title,
          duration as Duration, 
          group_concat(' ',P.pubsname,' (',P.badgeid,')') as 'Participants' 
     from Sessions S, 
          Participants P, 
          ParticipantOnSession POS, 
          Tracks 
    where P.badgeid=POS.badgeid 
      and POS.sessionid=S.sessionid 
      and Tracks.trackid=S.trackid 
 group by S.sessionid 
 order by Trackname,
          S.sessionid;"
