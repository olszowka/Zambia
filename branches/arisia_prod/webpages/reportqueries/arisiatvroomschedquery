TITLE='Arisia TV by time '
DESCRIPTION='Just things in TV room'
ARISIATVWANTS=1
QUERY="
select
        DATE_FORMAT(ADDTIME('2011-01-14 00:00:00',starttime),'%a %l:%i %p') as 'Start Time',
        duration,
        trackname, 
        S.sessionid,
        title,
        group_concat(' ',pubsname,' (',P.badgeid,')') as 'Participants'
    from
        Tracks T,
        Rooms R,
        Sessions S,
        Schedule SCH
    LEFT JOIN
        ParticipantOnSession POS ON SCH.sessionid = POS.sessionid
    LEFT JOIN
        Participants P ON POS.badgeid = P.badgeid
    where
        T.trackid = S.trackid and
        SCH.roomid = R.roomid and
        SCH.sessionid = S.sessionid and
        roomname in ('ArisiaTV')
    group by
        SCH.sessionid
    order by
        SCH.starttime;"
