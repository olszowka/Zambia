TITLE='Session Features'
DESCRIPTION='Which Session needs which Features? (Sorted by room then time)'
PROGWANTS=1
EVENTSWANTS=1
TECHWANTS=1
HOTELWANTS=1
QUERY="
   select Roomname,
          DATE_FORMAT(ADDTIME('2011-01-14 00:00:00',starttime),'%a %l:%i %p') as 'Start Time', 
          Duration,
          Trackname, 
          X.Sessionid,
          concat('<a href=EditSession.php?id=',X.sessionid,'>',X.title,'</a>') Title,
          X.Featurename 
          from (select duration,
                       trackname,
                       S.sessionid,
                       title,
                       featurename 
                  from Sessions S, 
                       SessionHasFeature SF, 
                       Features F, 
                       Tracks T 
                 where T.trackid=S.trackid 
                   and S.sessionid=SF.sessionid 
                   and F.featureid=SF.featureid) X, 
         Rooms R, 
         Schedule SCH 
   where X.sessionid=SCH.sessionid 
     and SCH.roomid=R.roomid 
order by roomname, 
         starttime;"
   