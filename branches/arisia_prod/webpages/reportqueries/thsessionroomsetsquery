TITLE='Session roomsets'
DESCRIPTION='What roomsets are we using (Sorted by Room then Time)'
PROGWANTS=1
EVENTSWANTS=1
TECHWANTS=1
HOTELWANTS=1
QUERY="
SELECT
           R.roomname as 'Room',
           DATE_FORMAT(ADDTIME('2011-01-14 00:00:00',SCH.starttime),'%a %l:%i %p') as 'Start Time', 
           S.duration as 'Duration',
           T.trackname as 'Track', 
           S.sessionid as 'Sessionid',
           concat('<a href=EditSession.php?id=',S.sessionid,'>',S.title,'</a>') as 'Title',
           RS.roomsetname as 'Room Set',
           S.servicenotes as 'Notes for Tech and Hotel'
    FROM 
           Schedule SCH
      JOIN Sessions S USING (sessionid)
      JOIN Rooms R USING (roomid)
      JOIN Tracks T USING (trackid)
      JOIN RoomSets RS USING (roomsetid)	  
    ORDER BY
           R.roomname,
           SCH.starttime"
