TITLE='Participant availablity'
DESCRIPTION='When they said they were available.'
PROGWANTS=1
QUERY="
SELECT
        P.badgeid, P.pubsname, 
        DATE_FORMAT(ADDTIME('2011-01-14 00:00:00',starttime),'%a %l:%i %p') AS 'Start Time', 
        DATE_FORMAT(ADDTIME('2011-01-14 00:00:00',endtime),'%a %l:%i %p') AS 'End Time' 
    FROM
        Participants AS P LEFT JOIN
        ParticipantAvailabilityTimes AS PAT USING (badgeid)
    WHERE
        P.interested=1
    ORDER BY
        CAST(P.badgeid AS UNSIGNED),starttime"

